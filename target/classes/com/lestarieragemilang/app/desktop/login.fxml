<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lestarieragemilang.app.desktop.Controller.AuthController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="1200.0">
         <center>
            <StackPane fx:id="authStackPane" prefHeight="650.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane prefHeight="650.0" prefWidth="1200.0" style="-fx-background-color: #212121;">
                     <children>
                        <!-- Login Form -->
                        <VBox fx:id="loginView" alignment="CENTER" layoutX="400.0" layoutY="75.0" prefHeight="500.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: rgba(0,139,139,0.2); -fx-background-radius: 20;">
                           <children>
                              <Label fx:id="greetingText" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #00bfff;" text="Selamat Datang" />
                              <VBox prefWidth="300.0" spacing="15.0">
                                 <children>
                                    <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Username" />
                                    <TextField fx:id="loginUsername" prefHeight="40.0" promptText="Masukan Username" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0; -fx-font-weight: bold;">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font></TextField>
                                    <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Password" />
                                    <PasswordField fx:id="loginPassword" prefHeight="40.0" promptText="Masukan Password" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0; -fx-font-weight: bold;">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font></PasswordField>
                                 </children>
                              </VBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <JFXButton buttonType="RAISED" onAction="#loginToApp" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #00bfff; -fx-text-fill: #ffffff; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold; -fx-border-radius: 25;" text="Masuk">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </JFXButton>
                                    <JFXButton buttonType="RAISED" onAction="#showRegisterView" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #009688; -fx-text-fill: #ffffff; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold; -fx-border-radius: 25;" text="Daftar">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </JFXButton>
                                 </children>
                              </HBox>
                              <JFXButton buttonType="RAISED" onAction="#exitApp" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #FF5722; -fx-text-fill: #ffffff; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold; -fx-border-radius: 25;" text="Keluar">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </JFXButton>
                           </children>
                           <padding>
                              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>

                  <VBox fx:id="registerView" alignment="CENTER" prefHeight="650.0" prefWidth="1200.0" spacing="20.0" style="-fx-background-color: #212121;" visible="false">
                     <children>
                        <HBox prefWidth="1200.0" spacing="20.0">
                           <children>
                              <ListView fx:id="profileListView" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #212121; -fx-border-radius: 10; -fx-border-color: #00bfff; -fx-background-color: rgba(0,139,139,0.2);" />
                              <VBox prefWidth="700.0" spacing="10.0">
                                 <children>
                                    <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #00bfff;" text="Daftar Admin Baru" />
                                    <VBox prefWidth="300.0" spacing="10.0">
                                       <children>
                                          <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Email" />
                                          <TextField fx:id="registerEmail" prefHeight="40.0" promptText="Masukan Email" style="-fx-background-color: #212121; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #00bfff; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0;" />
                                          <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Username" />
                                          <TextField fx:id="registerUsername" prefHeight="40.0" promptText="Masukan Username" style="-fx-background-color: #212121; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #00bfff; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0;" />
                                          <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Password" />
                                          <PasswordField fx:id="registerPassword" prefHeight="40.0" promptText="Masukan Password" style="-fx-background-color: #212121; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #00bfff; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0;" />
                                          <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Konfirmasi Password" />
                                          <PasswordField fx:id="confirmPassword" prefHeight="40.0" promptText="Konfirmasi Password" style="-fx-background-color: #212121; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #00bfff; -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #e0e0e0;" />
                                       </children>
                                    </VBox>
                                    <HBox alignment="CENTER" spacing="20.0">
                                       <children>
                                          <JFXButton buttonType="RAISED" onAction="#registerAdmin" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #00bfff; -fx-text-fill: #ffffff; -fx-background-radius: 25; -fx-cursor: hand;" text="Daftar">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </JFXButton>
                                          <JFXButton buttonType="RAISED" onAction="#showLoginView" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #FF5722; -fx-text-fill: #ffffff; -fx-background-radius: 25; -fx-cursor: hand;" text="Kembali">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </JFXButton>
                                       </children>
                                       <padding>
                                          <Insets top="20.0" />
                                       </padding>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
